{
  "compilerOptions": {
    /* Output & Modules */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      // Frontend (root)
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],

      // Backend (src) â€” specific aliases win over wildcard
      "@/parser": ["src/parser/index.ts"],
      "@/meta-planner": ["src/meta-planner/index.ts"],
      "@/template-builder": ["src/template-builder/index.ts"],
      "@/tools": ["src/tools/index.ts"],
      "@/utils": ["src/utils/index.ts"],
      "@/parser/*": ["src/parser/*"],
      "@/meta-planner/*": ["src/meta-planner/*"],
      "@/template-builder/*": ["src/template-builder/*"],
      "@/tools/*": ["src/tools/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/fixtures/*": ["src/fixtures/*"]  
    },

    /* Runtime Types & Libs */
    "types": ["node"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "src/**/*",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "next-env.d.ts"
, "next.config.js", "eslint.config.js"  ],
  "exclude": ["dist", "node_modules", "generated-templates"]
}


