{
  "amc_lookalike_builder": {
    "tagline": "Build lookalike audiences in AMC based on seed purchasers",
    "required_features": {
      "amc_access": true,
      "seed_audience": true
    },
    "success_metrics": {
      "lookalike_created": true,
      "audience_size": 1000
    },
    "timeline": {
      "start": [
        "fetch_seed_audience"
      ],
      "steps": [
        "create_lookalike",
        "export_to_ads_console"
      ],
      "completion": [
        "lookalike_exported"
      ]
    },
    "tools": {
      "amc.createlookalike": {
        "inputs": {
          "seed_audience": "customer_list_id",
          "lookalike_size": "percentage_of_population"
        },
        "outputs": {
          "lookalike_audience_id": "generated_audience_id"
        }
      }
    }
  }
}